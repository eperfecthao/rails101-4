<div class="col-md-4 col-md-offset-4">
<%= simple_form_for [@group,@post] do |p| %>
<div class="form-group">
    <%= p.input :content, input_html: {class: "form-control"} %>
</div>
<div class="form-actions">
<%= p.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submiting..."} %>
</div>
<% end %>

</div>
